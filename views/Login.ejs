<!DOCTYPE html>
<html>

<head>
    <% include ./Layout/Head.ejs %>
</head>

<body>
    <% include ./Layout/Navbar.ejs %>
    <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->

    <br>
    <div class="container">
        <div class="row">
            <div class="col s12 m8 l6 push-m2 push-l3">
                <div class="card-panel hoverable">
                    <form method="POST" action="/login">
                        <div class="input-field">
                            <input id="email" name="EMAIL" type="email" class="validate">
                            <label for="email">Email</label>
                        </div>
                        <div class="input-field">
                            <input id="password" name="PASS" type="password" class="validate">
                            <label for="password">Password</label>
                        </div>
                        <div class="center">
                            <button class="btn waves-effect waves-light themeAccent z-depth-0 btn-small marginAll" type="submit"
                                name="action">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="center">
            <a class="waves-effect waves-light themeAccent btn-small marginAll">Forgot?</a>
            <a href="/register" class="waves-effect waves-light themeAccent btn-small marginAll">Register</a>
        </div>
    </div>
    <br>

    <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
    <% include ./Layout/Footer.ejs %>
