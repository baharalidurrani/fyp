<!DOCTYPE html>
<html>

<head>
    <% include ./Layout/Head.ejs %>
</head>

<body>
    <div id="root" class="g9c27b0">

        <% include ./Layout/Navbar.ejs %>
        <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->

        <div class="container">
            <br>

            <ul class="collapsible popout">
                <li class="white">
                    <div class="row">
                        <div>
                            <h6 class="col s3"><b>Topic</b></h6>
                            <h6 class="col s3"><b>Author</b>(s)</h6>
                            <h6 class="col s3"><b>Status</b></h6>
                            <h6 class="col s3"></h6>
                        </div>
                    </div>
                </li>
                <%for(var i=0;i<Papers.length;i++){%>
                <li class="btnClose white">
                    <div class="row">
                        <div class="collapsible-header">
                            <span class="col s3"><b>
                                    <%=Papers[i]._title%></b></span>
                            <span class="col s3">
                                <%=Papers[i]._author%></span>
                            <span class="col s3">
                                <%=Papers[i]._status%></span>
                            <a class="col s3 z-depth-0 waves-effect waves-light btn-small">Review</a>
                        </div>
                    </div>
                    <div class="btnClose collapsible-body">
                        <form method="POST" action="/upload">
                            <div class="input-field">
                                <textarea id="textarea" class="materialize-textarea" data-length="325" name="FORAUTHOR"
                                    required="" aria-required="true"></textarea>
                                <label for="textarea">Comment for Author</label>
                            </div>
                            <div class="input-field">
                                <textarea id="textarea" class="materialize-textarea" data-length="325" name="FOREDITOR"
                                    required="" aria-required="true"></textarea>
                                <label for="textarea">Comment for Editor</label>
                            </div>
                            <div class="center">
                                <a href="/paper" class="z-depth-0 waves-effect waves-light btn-small marginAll">View</a>
                                <button type="submit" name="AS" value="accept" class="z-depth-0 waves-effect waves-light btn-small marginAll">Accept</button>
                                <button type="submit" name="AS" value="reject" class="z-depth-0 waves-effect waves-light btn-small marginAll">Reject</button>
                                <a onclick="btnClose()" class="z-depth-0 waves-effect waves-light btn-small marginAll">Cancel</a>
                            </div>
                        </form>
                    </div>
                </li>
                <%}%>
            </ul>
        </div>
        <br>

        <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
        <% include ./Layout/Footer.ejs %>
    </div>
    <!-- //////////////////////////////////////////////////////////////////////////////////// -->
    <% include ./Layout/ScriptTag.ejs %>

</body>

</html>