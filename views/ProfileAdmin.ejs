<!DOCTYPE html>
<html>

<head>
    <% include ./Layout/Head.ejs %>
</head>

<body>
    <div id="root" class="gee6e73">

        <% include ./Layout/Navbar.ejs %>
        <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->

        <br>
        <div class="container">
            <div class="card hoverable">
                <div class="card-content">
                    <span class="card-title">
                        <%=User._name %> <a href="/edit" class="right waves-effect waves-light z-depth-0 btn-small"><i
                                class="material-icons">edit</i></a></span>
                </div>
                <div class="divider"></div>
                <div class="card-content">
                    <span>Email:</span><span class="right">
                        <%=User._email %></span>
                </div>
                <div class="divider"></div>
                <div class="card-content">
                    <span>Gender:</span><span class="right">
                        <%=User._gender %></span>
                </div>
                <div class="divider"></div>
                <div class="card-content">
                    <span>Approved Roles:</span>
                    <br>
                    <span class="right">
                        <label class="marginAll">
                            <input type="checkbox" checked="checked" disabled="disabled" />
                            <span>Author</span>
                        </label>
                        <label class="marginAll">
                            <input type="checkbox" checked="checked" disabled="disabled" />
                            <span>Reviewer</span>
                        </label>
                        <label class="marginAll">
                            <input type="checkbox" disabled="disabled" />
                            <span>Editor</span>
                        </label>
                    </span>
                    <br>
                </div>
            </div>
        </div>
        <h4 class="themePrimary textPrimary center">Users Approval</h4>
        <div class="container">
            <ul class="collapsible collapsible popout">
                <li>
                    <div class="collapsible-header"><i class="material-icons">people_outline</i>Reviewers<span class="new badge">
                            <%=TempUsers.length;%></span></div>
                    <div class="collapsible-body">
                        <table class="striped centered">
                            <tbody>
                                <!-- <tr>
                                <td>Nameera</td>
                                <td>nameera@gmail.com</td>
                                <td><a href="" class="waves-effect waves-light btn">Approve</a></td>
                            </tr> -->
                                <% for(var i=0;i<TempUsers.length;i++){%>
                                <tr>
                                    <td>
                                        <%=TempUsers[i]._name%>
                                    </td>
                                    <td>
                                        <%=TempUsers[i]._email%>
                                    </td>
                                    <td>
                                        <form action="/profile" method="POST">
                                            <button class="btn waves-effect waves-light themeAccent btn-small marginAll"
                                                type="submit" name="ID" value="<%=TempUsers[i]._id%>">Approve</button>
                                        </form>
                                    </td>
                                </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </li>
                <li>
                    <div class="collapsible-header"><i class="material-icons">people</i>Editors<span class="new badge">2</span></div>
                    <div class="collapsible-body">
                        <table class="striped centered">
                            <tbody>
                                <tr>
                                    <td>Nameera</td>
                                    <td>nameera@gmail.com</td>
                                    <td><a href="" class="waves-effect waves-light btn">Approve</a></td>
                                </tr>
                                <tr>
                                    <td>Nameera</td>
                                    <td>nameera@gmail.com</td>
                                    <td><a href="" class="waves-effect waves-light btn">Approve</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </li>
            </ul>
        </div>

        <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
        <% include ./Layout/Footer.ejs %>
    </div>
    <!-- //////////////////////////////////////////////////////////////////////////////////// -->
    <% include ./Layout/ScriptTag.ejs %>

</body>

</html>