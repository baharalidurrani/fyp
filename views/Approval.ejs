            <ul class="white collapsible expandable">
                <li>
                    <div class="collapsible-header"><i class="material-icons">people</i>Authors</div>
                    <div class="collapsible-body">
                        <table class="highlight centered">
                            <tbody>
                                <% for(var i=0;i<TempUsers.length;i++){%>
                                <% if(TempUsers[i]._rolesDemanded.indexOf('author')>-1){%>
